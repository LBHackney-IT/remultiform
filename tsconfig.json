{
  "compilerOptions": {
    "target": "es5",
    "module": "es6",
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "jsx": "react",
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "idb": ["node_modules/idb/build/esm/index"]
    }
  },
  "include": ["src"],
  "exclude": ["**/node_modules/**/*"]
}
